<p id="notice"><%= notice %></p>

<h1>Flights</h1>

<form action="/flights" method="GET">

  <%= @company_id %>
          <select name="company_id">
            <option disabled selected value> Select a company </option> 
            <% Company.all.each_with_index do | t, index | %>
              <option value="<%= t.id %>" <% t.id.to_s == @company_id ? "selected" : "" %>> <%= t.name%> </option>
            <% end -%>
          </select>
        <input type="submit", value="SUBMIT" />
<br>
  <%= @airplane_id %>
          <select name="airplane_id">
            <option disabled selected value> Select a Airplane </option> 
            <% Airplane.all.each_with_index do | t, index | %>
              <option value="<%= t.id %>" <% t.id.to_s == @airplane_id ? "selected" : "" %>> <%= t.registration%> </option>
            <% end -%>
          </select>

        <input type="submit", value="SUBMIT" />
</form>

<br>

  FROM: <input style="color:#787878; border-radius: 2px; padding: 10px; margin-right: 20px; font-family: 'Montserrat', sans-serif; background-color: #e0e0e0; text-transform: uppercase; " type="date" name="from" placeholder="From" value="<%= @from %>"/>

  TO :<input style="color:#787878; border-radius: 2px; padding: 10px; margin-right: 20px; font-family: 'Montserrat', sans-serif; background-color: #e0e0e0; text-transform: uppercase;" type="date" name="to" placeholder="To" value="<%= @to %>"/>

  <input style="color:white; border-radius: 2px; padding: 10px; margin-right: 20px; font-family: 'Montserrat', sans-serif; background-color: black; " type="submit", value="CHECK AVAILABILITY" />

</form>

<form action="/flights" method="GET">
  Airport: <input type="text" name="airport" placeholder="Airport" value="<%= @airport %>"/>
  <input type="submit", value="Submit" />
</form>

<form action="/flights" method="GET">
  Flight Name: <input type="text" name="name" placeholder="Name" value="<%= @name %>"/>
  <input type="submit", value="Submit" />
</form>



<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Airplane model</th>
      <th>Airplane registration</th>
      <th>Seatings count</th>
      <th>Departure date</th>
      <th>Arrival date</th>
      <th>Arrival</th>
      <th>Name</th>
      <th>State code</th>
      <th>Departure place</th>
      <th>Arrival place</th>
      <th>Airport</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>

        <td><%= flight.airplane.company.name %></td>
        <td><%= flight.airplane.model %></td>
        <td><%= flight.airplane.registration%></td>
        <td><%= flight.airplane.seatings%></td>
        <td><%= flight.departure_date %></td>
        <td><%= flight.arrival_date %></td>
        <td><%= flight.arrival %></td>
        <td><%= flight.name %></td>
        <td><%= flight.state_code %></td>
        <td><%= flight.departure_place %></td>
        <td><%= flight.arrival_place %></td>
        <td><%= flight.airport %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

